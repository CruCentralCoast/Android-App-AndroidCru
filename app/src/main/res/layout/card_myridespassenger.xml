<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_rides_passenger_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true"
    android:layout_margin="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eventName"
            android:layout_marginLeft="12dp"
            tools:text="Fall Retreat"
            android:textColor="@color/grey800"
            android:textSize="24dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/departureTime"
            tools:text="Tuesday, January 11 10:00am - 7:00pm"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="4dp"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/departureLoc"
            tools:text="Performance Arts Center"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="4dp"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/driverTitle"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="4dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/YourDriver"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/driverInfo"
            android:layout_below="@+id/driverTitle"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="4dp"
            android:textSize="16sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/actionLayout">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancelOffering"
                android:text="@string/cancel"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="@color/cruDarkBlue"
                android:layout_marginRight="16dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>