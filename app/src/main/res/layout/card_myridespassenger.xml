<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>
        <import type="android.view.View"/>
        <import type="org.androidcru.crucentralcoast.presentation.viewmodels.ridesharing.MyRidesPassengerVM"/>
        <variable name="ride" type="MyRidesPassengerVM"/>
    </data>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/my_rides_passenger_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eventName"
                android:layout_marginLeft="12dp"
                tools:text="Fall Retreat"
                android:text="@{ride.eventName}"
                android:textColor="@color/grey800"
                android:textSize="24dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/departureTime"
                tools:text="Tuesday, January 11 10:00am - 7:00pm"
                android:text="@{ride.dateTime}"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="4dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/departureLoc"
                tools:text="Performance Arts Center"
                android:text="@{ride.location}"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="4dp"
                android:textSize="16sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/actionLayout">


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editOffering"
                    android:text="@string/edit"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/launchPassenger"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="@color/cruDarkBlue"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="16dp"
                    android:onClick="@{ride.onEditOfferingClicked}"
                    android:foreground="?android:attr/selectableItemBackground"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cancelOffering"
                    android:text="@string/cancel"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="@color/cruDarkBlue"
                    android:layout_marginRight="16dp"
                    android:layout_centerInParent="true"
                    android:onClick="@{ride.onCancelOfferingClicked}"/>


                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:id="@+id/chevView"
                    android:src="@drawable/ic_chevron_down_grey600_48dp"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/passengerList"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="16dp"
                android:text="@{ride.driverInfo}"
                android:visibility="@{ride.isExpanded ? View.VISIBLE : View.GONE}" />

        </LinearLayout>



    </android.support.v7.widget.CardView>

</layout>