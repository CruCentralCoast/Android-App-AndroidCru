<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <import type="org.androidcru.crucentralcoast.presentation.viewmodels.events.CruEventVM" />
        <variable name="event" type="CruEventVM" />
    </data>

    <android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true"
    android:layout_margin="8dp"
    android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:animateLayoutChanges="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eventName"
                android:layout_marginLeft="12dp"
                tools:text="Fall Retreat"
                android:textColor="@color/grey800"
                android:textSize="24dp"
                android:text="@{event.cruEvent.mName}"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eventDate"
                android:text="@{event.dateTime}"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="4dp"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:adjustViewBounds="true"
                android:id="@+id/event_banner"
                app:src="@{event.cruEvent.mImage != null ? event.cruEvent.mImage.mURL : ``}"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <RelativeLayout
                    android:id="@+id/fbParent"
                    android:layout_width="0dp"
                    app:layout_widthPercent="25%"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentStart="false">

                    <ImageButton
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:padding="8dp"
                        android:id="@+id/fbButton"
                        android:src="@{@drawable/ic_facebook_box_grey600_48dp}"
                        android:onClick="@{event.onFacebookClick}"
                        app:tint="@{@color/fbBlue}"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:scaleType="fitCenter" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mapParent"
                    android:layout_width="0dp"
                    app:layout_widthPercent="25%"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/fbParent">

                    <ImageButton
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:padding="8dp"
                        android:id="@+id/mapButton"
                        android:src="@{@drawable/ic_map_marker_grey600_48dp}"
                        android:onClick="@{event.onMapClick}"
                        app:tint="@{@color/red600}"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:scaleType="fitCenter" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/calParent"
                    android:layout_width="0dp"
                    app:layout_widthPercent="25%"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/mapParent">

                    <ImageButton
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:padding="8dp"
                        android:id="@+id/calButton"
                        app:selected="@{event.addedToCalendar}"
                        app:selectedDrawable="@{@drawable/ic_calendar_check_grey600_48dp}"
                        app:unselectedDrawable="@{@drawable/ic_calendar_plus_grey600_48dp}"
                        app:selectionTint="@{@color/cal_action}"
                        android:onClick="@{event.onCalendarClick}"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:scaleType="fitCenter" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/chevParent"
                    android:layout_width="0dp"
                    app:layout_widthPercent="25%"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/calParent">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:padding="8dp"
                        android:id="@+id/chevView"
                        android:src="@{event.isExpanded ? @drawable/ic_chevron_up_grey600_48dp : @drawable/ic_chevron_down_grey600_48dp}"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:scaleType="fitCenter" />
                </RelativeLayout>
            </android.support.percent.PercentRelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eventDescription"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="16dp"
                android:text="@{event.cruEvent.mDescription}"
                android:visibility="@{event.isExpanded ? View.VISIBLE : View.GONE}"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>