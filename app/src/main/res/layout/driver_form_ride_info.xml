<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/car_capacity_layout"
        android:padding="8dp">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/car_capacity_icon"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_car_grey600_48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:padding="8dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/car_capacity_group"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/car_capacity_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_car_capacity"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/car_capacity_field"
                    android:prompt="@string/select_car_capacity"
                    android:layout_marginRight="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="available seats"
                    android:id="@+id/car_capacity_detail"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/trip_type_layout"
        android:padding="8dp"
        android:layout_below="@+id/car_capacity_layout">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/trip_type_icon"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_car_grey600_48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:padding="8dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trip_type_group"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/trip_type_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_trip_type"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/trip_type_field"
                    android:prompt="@string/select_trip_type"
                    android:layout_marginRight="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/trip_type_detail"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/depart_layout"
        android:padding="8dp"
        android:layout_below="@+id/trip_type_layout"
        android:scrollIndicators="right">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/depart_icon"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_account_grey600_48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:padding="8dp"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_depart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/depart_icon"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/depart_date_field"
                    android:hint="Departure Date"
                    android:inputType="text"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/depart_time_field"
                    android:hint="Departure Time"
                    android:layout_toRightOf="@+id/depart_date_field"
                    android:inputType="text"/>
            </RelativeLayout>
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/return_layout"
        android:padding="8dp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/depart_layout">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/return_icon"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_account_grey600_48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:padding="8dp"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_return"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/return_icon"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/return_date_field"
                    android:hint="Return Date"
                    android:inputType="text"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/return_time_field"
                    android:hint="Return Time"
                    android:layout_toRightOf="@+id/return_date_field"
                    android:inputType="text"/>
            </RelativeLayout>
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

</LinearLayout>