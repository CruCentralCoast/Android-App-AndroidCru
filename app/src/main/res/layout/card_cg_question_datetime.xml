<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/cg_question_datetime_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cgq_datetime_text"
            android:paddingBottom="4dp"
            android:textSize="20sp"
            android:text="Example Datetime Question"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/cgq_date_layout">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/cgq_input_layout_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cgq_date_field"
                    android:hint="Date"
                    android:inputType="date"
                    android:focusable="false"
                    android:layout_centerVertical="true"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/cgq_time_layout">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/cgq_input_layout_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cgq_time_field"
                    android:hint="Time"
                    android:inputType="date"
                    android:layout_centerVertical="true"
                    android:focusable="false"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </LinearLayout>


    <View android:layout_width="match_parent"
          android:id="@+id/resource_divider"
          android:layout_height="2px"
          android:background="@color/grey300"
          android:minHeight="2px"/>

</android.support.v7.widget.CardView>