<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/app_bar_main"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_bar"/>

        <RelativeLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/grey300"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:id="@+id/prev"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_alignParentStart="true">

                <TextView
                    tools:text="PREVIOUS"
                    android:id="@+id/prevText"
                    android:text="@string/previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey600"
                    android:textSize="16sp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:drawablePadding="8dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/prevIcon"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"/>

                <ImageView
                    android:id="@+id/prevIcon"
                    android:layout_width="36sp"
                    android:layout_height="36sp"
                    android:scaleType="fitCenter"
                    android:drawablePadding="8sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/ic_chevron_left_grey600_48dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <TextView
                    tools:text="NEXT"
                    android:id="@+id/nextText"
                    android:text="@string/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey600"
                    android:textSize="16sp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:drawablePadding="8dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"/>

                <ImageView
                    android:id="@+id/nextIcon"
                    android:layout_width="36sp"
                    android:layout_height="36sp"
                    android:scaleType="fitCenter"
                    android:drawablePadding="8sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/nextText"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_chevron_right_grey600_48dp"/>

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
