<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:padding="16dp">

    <ImageView
        android:id="@+id/driverIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_car_grey600"
        android:layout_centerVertical="true"
        />

    <LinearLayout
        android:id="@+id/rideInfo"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/driverIcon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/driverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Jane Doe"
            android:textColor="@color/grey800"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/rideDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Monday, Febuary 29th, 2016"
            android:layout_marginBottom="4dp"
            android:textSize="16dp"/>

        <TextView
            tools:text="5.000000 miles away"
            android:id="@+id/distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textSize="16dp"/>

    </LinearLayout>
</RelativeLayout>
