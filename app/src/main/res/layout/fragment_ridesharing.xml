<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:id="@+id/ride_view"
android:layout_width="match_parent"
android:layout_height="wrap_content"
card_view:cardCornerRadius="4dp"
card_view:cardPreventCornerOverlap="true"
card_view:cardUseCompatPadding="true"
android:layout_margin="8dp"
android:foreground="?android:attr/selectableItemBackground">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventName"
        android:layout_marginLeft="12dp"
        tools:text="Fall Retreat"
        android:textColor="@color/grey800"
        android:textSize="24dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventDate"
        tools:text="Tuesday, January 11 10:00am - 7:00pm"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="4dp"
        android:textSize="16sp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:adjustViewBounds="true"
        android:id="@+id/event_banner"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <RelativeLayout
            android:id="@+id/fbParent"
            android:layout_width="0dp"
            app:layout_widthPercent="25%"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentStart="false">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/launchDriver"
                android:text="Driver"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/calParent"
            android:layout_width="0dp"
            app:layout_widthPercent="25%"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/fbParent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/launchPassenger"
                android:text="Passenger" />
        </RelativeLayout>

    </android.support.percent.PercentRelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventDescription"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />
</LinearLayout>
</android.support.v7.widget.CardView>